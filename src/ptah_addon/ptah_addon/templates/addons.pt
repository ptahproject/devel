<div class="page-header">
  <h2>Add-ons</h2>
</div>

<div class="columns" 
     tal:define="url '%s/ptah-manage/addons'%request.application_url">
  <form method="post" action="${url}/">
    <fieldset>
      <div tal:repeat="pkg view.addons">
	<input type="checkbox" name="addon" value="${pkg.project_name}" />
	<a href="${url}/${pkg.project_name}/">${pkg}</a>
      </div>
    </fieldset>
    <div class="actions">
      <input type="submit" class="btn primary" value="Install"
	     name="form.button.install" />
    </div>
  </form>
</div>
